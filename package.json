{
  "name": "tatooine",
  "version": "3.0.1",
  "description": "",
  "directories": {
    "doc": "docs",
    "lib": "lib"
  },
  "author": "Beto Muniz <contato@betomuniz.com>",
  "license": "MIT",
  "type": "module",
  "main": "dist/bundle.cjs.js",
  "module": "dist/bundle.esm.js",
  "exports": {
    "import": "./dist/bundle.esm.js",
    "require": "./dist/bundle.cjs.js"
  },
  "types": "./dist/types.d.ts",
  "repository": {
    "type": "git",
    "url": "https://github.com/obetomuniz/tatooine.git"
  },
  "bugs": {
    "url": "https://github.com/obetomuniz/tatooine/issues",
    "email": "contato@betomuniz.com"
  },
  "dependencies": {
    "axios": "^1.3.4",
    "jsdom": "^21.1.1",
    "lodash.get": "^4.4.2",
    "puppeteer": "^19.7.5",
    "xpath-ts": "^1.3.13"
  },
  "devDependencies": {
    "@rollup/plugin-commonjs": "^24.0.1",
    "@rollup/plugin-node-resolve": "^15.0.1",
    "@rollup/plugin-terser": "^0.4.0",
    "@types/jest": "^29.5.0",
    "@types/jsdom": "^21.1.0",
    "@types/lodash.get": "^4.4.7",
    "jest": "^29.5.0",
    "rollup": "^3.20.0",
    "rollup-plugin-typescript2": "^0.34.1",
    "ts-jest": "^29.0.5",
    "typescript": "^5.0.2"
  },
  "scripts": {
    "pkg": "rollup -c",
    "prepublishOnly": "npm run pkg",
    "demo": "npx @digitak/esrun ./demo",
    "test": "NODE_OPTIONS=--experimental-vm-modules jest && codecov",
    "test:watch": "NODE_OPTIONS=--experimental-vm-modules jest --watch",
    "test:coverage": "jest --collect-coverage"
  },
  "jest": {
    "preset": "ts-jest",
    "verbose": true,
    "clearMocks": true,
    "coverageReporters": [
      "json",
      "text",
      "lcov",
      "clover"
    ],
    "moduleFileExtensions": [
      "js",
      "json",
      "ts",
      "node"
    ],
    "extensionsToTreatAsEsm": [
      ".ts"
    ],
    "globals": {
      "ts-jest": {
        "useESM": true
      }
    },
    "testEnvironment": "node",
    "testPathIgnorePatterns": [
      "/node_modules/",
      "fixtures.ts",
      "/lib/types.ts"
    ],
    "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.tsx?$",
    "collectCoverage": true,
    "coverageDirectory": "./coverage/",
    "coveragePathIgnorePatterns": [
      "/node_modules/",
      "fixtures.ts",
      "/lib/types.ts"
    ]
  }
}
